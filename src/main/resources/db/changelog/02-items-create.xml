<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="02" author="IvanKondrashkov">
        <createTable tableName="items">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="image_id" type="bigint">
                <constraints nullable="true" foreignKeyName="fk_items_image_id" referencedTableName="images" referencedColumnNames="id"/>
            </column>
        </createTable>

        <createIndex tableName="items" indexName="idx_items_image_id">
            <column name="image_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>